generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String @unique
  password     String
  level        Level      @relation(fields: [levelId], references: [id])
  levelId      Int
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
}

model Level {
  id    Int       @id @default(autoincrement())
  name  LevelEnum
  users User[]
}

model Department {
  id    Int            @id @default(autoincrement())
  name  DepartmentEnum
  users User[]
}

enum LevelEnum {
  JUNIOR
  MID
  SENIOR
}

enum DepartmentEnum {
  HR
  IT
  MARKETING
}
